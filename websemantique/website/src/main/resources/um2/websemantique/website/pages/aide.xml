<html t:type="layoutWS" title="web site Index"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<p:sidebar>
		<div class="well">

			<div class="nav-header ">Search</div>
			<center>
				<t:form t:id="searchForm" class="form-search">
					<input t:type="textfield" t:value="search" t:id="search"
						class="search-query" placeholder="Your Query" />
					<br />
					<br />
					<t:select t:id="type" />
					<br />
					<br />
					<br />

					<t:submit t:id="submit" class="btn btn-inverse" style="width : 50%"
						value="Recherche" />
				</t:form>
			</center>

		</div>

	</p:sidebar>
	<div class="row">
		<div class="span9">
			<t:zone t:id="progressZone" id="progressZone" t:mixins="zonerefresh"
				t:period="1">
				<t:if test="progress" class="well">
					<div class="progress progress-info progress-striped">
						<div class="bar" style="width: ${progress}%">downloading from web </div>
					</div>
				</t:if>
			</t:zone>

			<t:if test="response">

				<t:if test="response.books">
					<t:loop source="response.books" value="book">
						<t:beandisplay object="book" exclude="${book.excludes},excludes" />
					</t:loop>
				</t:if>

				<br />
				-----------------------------------------------------------------------------------------------------------------------
				<br />
				<t:if test="response.authors">
					<t:loop source="response.authors" value="author">
						<t:beandisplay object="author" exclude="${author.excludes},excludes" >
							<p:goodRead>
								<t:beandisplay object="author.goodRead" exclude="${author.goodRead.excludes}" >
							</p:goodRead>
							<p:facebook>
								<t:beandisplay object="author.facebook" exclude="${author.facebook.excludes}" >
							</p:facebook>
						</t:beandisplay>
					</t:loop>
				</t:if>
			</t:if>

		</div>
	</div>




</html>
